{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "<your-tenant-id>",
    "ClientId": "<your-client-id>"
  },
  "AzureAIFoundry": {
    "ProjectEndpoint": "https://<your-foundry-project>.cognitiveservices.azure.com/openai/deployments/<your-deployment>",
    "ModelName": "<your-model-name>"
  },
  "Microsoft365": {
    "TenantId": "<your-tenant-id>",
    "ClientId": "<your-client-id>",
    "FilterExpression": "path:\"https://<your-tenant>.sharepoint.com\"",
    "FileContextQuery": "What are all the relevant policies",
    "RulesContextQuery": "What are all the rules in rulebooks that apply to new policies"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ForceHttps": true,
  "UseHttpsRedirection": true,
  "ForwardedHeadersOptions": {
    "ForwardedHeaders": "XForwardedFor,XForwardedProto,XForwardedHost",
    "RequireHeaderSymmetry": false
  },
  "Authentication": {
    "Schemes": {
      "OpenIdConnect": {
        "RequireHttpsMetadata": true,
        "ResponseType": "code",
        "UsePkce": true,
        "SaveTokens": true
      }
    }
  },
  "CookiePolicy": {
    "SecurePolicy": "Always",
    "SameSite": "Lax",
    "HttpOnly": true
  }
}
